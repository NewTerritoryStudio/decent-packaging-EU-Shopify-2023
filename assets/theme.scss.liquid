          position: relative;
          display: inline-block;
          border: 1px solid transparent;
          min-width: 50px;
          min-height: 50px;
          line-height: 50px;
          padding: 0 0.75em;
          font-weight: $font-weight-bold;
          margin: 0 0.25em 0.25em;
          background-color: #f2f2f2;

          &:active,
          &:focus {
            border-color: #0089ff;
          }

          span {
            vertical-align: middle;
            display: block;
            font-size: 1.25em;
            font-weight: 900;
            @include user-select(none);
          }
        }

        input {
          @include visually-hidden;
        }

        input[type='radio'] {
          &:focus + label {
            border-color: #0089ff;
          }

          &:checked + label {
            border-color: #000;
            background-color: #000;
            color: #fff;
          }

          &:disabled, .disabled {
            & + label {
              // display: none;

              &::before {
                position: absolute;
                content: "";
                left: 50%;
                top: 0;
                bottom: 0;
                border-left: 1px solid;
                border-color: #d44b4b;
                @include transform(rotate(45deg));
              }
            }
          }

          &.single-option-selector__radio--with-image {
            & + label {
              padding: 0;
              width: 60px;
              height: 60px;
              line-height: 58px;
              background-color: transparent;

              img {
                width: 100%;
                height: 100%;
                @include object-fit(contain);
              }
            }
            
            &.single-option-selector--no-image {
              & + label {
                width: auto;
                padding: 0 0.75em;
                
                span {
                  font-size: 1em;
                }
              }

              &.single-option-selector--sole-option + label {
                border-color: transparent;
                height: auto;
                min-height: 0;
                line-height: 1.3;
              }
            }
          }
        }
      }
    }
  }
