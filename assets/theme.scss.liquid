          @include transition(transform 0.25s ease);
        }
      }

      & + h5 {
        @include flex(1 1 100%);
      }

      .type-selector__options {
        background-color: $color-body;
        border-radius: 2px;
        width: 100%;
        z-index: 200;
        border: 1px solid $color-border;
        padding: 10px;
        opacity: 0;
        @include transition(opacity 0.175s ease);
        will-change: opacity;
        @include box-shadow('0 0 20px 4px rgba(154,161,177,0.05), 0 4px 80px -8px rgba(36,40,47,0.05), 0 4px 4px -2px rgba(91,94,105,0.05)');
