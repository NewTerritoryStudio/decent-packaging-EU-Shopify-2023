$visibility-helpers: visible block, hidden none, flex flex;
@for $n from 1 through length($visibility-helpers) {
  $helper: nth($visibility-helpers, $n);
  @for $i from 1 through length($grid-breakpoints) {
    $breakpoint: nth($grid-breakpoints, $i);
    $size: nth($breakpoint, 2) - 0.01em;
    $prev: $i - 1;
    $prefix: nth($helper, 1);
    $output: nth($helper, 2);
    
    @if $i == length($grid-breakpoints) {
      $prev-breakpoint: nth($grid-breakpoints, $prev);
      $name: nth($prev-breakpoint, 1);
      @media only screen and (min-width: nth($prev-breakpoint, 2)) and (max-width: $size) {
        .#{$prefix}-#{$name} { @include display($output, true); }
      }
      $name: nth($breakpoint, 1);
      @media only screen and (min-width: $size) {
        .#{$prefix}-#{$name} { @include display($output, true); }
      }
    } @else if $i > 1 {
      $prev-breakpoint: nth($grid-breakpoints, $prev);
      $name: nth($prev-breakpoint, 1);
      @media only screen and (min-width: nth($prev-breakpoint, 2)) and (max-width: $size) {
        .#{$prefix}-#{$name} { @include display($output, true); }
      }
    } @else {
      @media only screen and (max-width: $size) {
        .#{$prefix}-xs { @include display($output, true); }
      }
    }
  }
}

