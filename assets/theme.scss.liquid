    margin: 0;
    width: auto;
    left: 50%;
    bottom: 0.5em;

    @include transform('translateX(-50%)');

    li {
      // sass-lint:disable SelectorDepth
      margin: 0;
      vertical-align: middle;
      width: $slick-dot-size-small * 2;
      height: $slick-dot-size-small * 2;

      @include mq(md) {
        width: $slick-dot-size;
        height: $slick-dot-size;
        margin-left: 8px;
      }

