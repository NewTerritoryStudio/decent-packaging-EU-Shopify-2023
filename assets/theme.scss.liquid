.product-sticky {
  position: fixed;
  top: 0;
  width: 100%;
  @include flex-direction(row);
  @include align-items(center);
  z-index: 50; /* Below cart drawer*/
  background: $color-default-tertiary;
  padding: #{$grid-gutter * 0.75} $grid-gutter #{$grid-gutter * 0.25};
  @include transform(translateY(0));
  @include transition('opacity 0.25s ease, transform 0.25s ease');
  will-change: transform, opacity;
  opacity: 1;
  pointer-events: all;
  box-shadow: 0 0 20px 4px rgba(154,161,177,0.05), 0 4px 80px -8px rgba(36,40,47,0.05), 0 4px 4px -2px rgba(91,94,105,0.05);

  display: none;

  @include mq(md) {
    @include display(flex);
  }

  &:not(.show) {
    @include transform(translateY(-10%));
    opacity: 0;
    pointer-events: none;
    visibility: hidden;
    z-index: -9999;

    .product-form__variants-popout.show {
      pointer-events: none;
    }
  }

  .product-sticky__col {
    @include flex(1 1 auto);

  }

  .product-sticky__col--details {
    margin-top: -0.6rem;
        
    .product-sticky__title {
      margin-bottom: 0;
      margin-bottom: 5px;
    }
    .product-sticky__subtitle {
      font-size: 0.7rem;
      line-height: 1em;
      margin-bottom: 5px;

      .product-sticky__subtitle-price {
        font-size: 0.9rem;
      }
    }
    .product-sticky__reviews {
      font-size: 0.6rem;
      line-height: 0.8rem;
    }
  }

  .product-sticky__col--form {
    @include display(flex);
    @include justify-content(flex-end);
    @include align-items(center);

    .sticky-form {
      @include display(flex);
      @include flex-direction(row);
      @include justify-content(flex-end);
      @include align-items(center);
      margin-bottom: 0;
      height: 100%;
      width: 100%;

