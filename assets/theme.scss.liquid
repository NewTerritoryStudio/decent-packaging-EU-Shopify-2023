/*================ Site Search ================*/
.search-results {
  font-size: 1rem;
  text-align: left;
  margin: 0 0 1.5em;
  @include display(flex);
  @include flex-direction(column);
  list-style: none;
}

.search-results__item {
  border-bottom: 1px solid $color-border;

  > a {
    @include display(flex);
    @include flex-direction(row);
    @include align-items(center);
    @include flex-wrap(wrap);
  }

  &:last-child {
    border: 0 none;
  }
}

.search-results__item-image-wrap {
  width: 100%;
  margin: 0 3% -1em 0;
  max-width: 140px;
  @include flex(0 1 18%);

  span {
    height: 100%;
  }

  img {
    @include object-fit(contain);
    max-height: 100px;
    height: 100%;
    width: 100%;
    margin: 0.5em auto;
  }

  @include mq(sm) {
    margin: 0 3% 0 0;

    img {
      max-height: 120px;
    }
  }
}

.search-results__item-title {
  margin: 0;
  padding: 1em 0;
  font-size: 1em;
  @include flex(1 1 67%);

  @include mq(sm) {
    @include flex(1 1 35%);
  }
}

.search-results {
  font-size: 1rem;
}

.search-results__item-description {
  text-align: right;
  @include flex-basis(100%);
  
  @include mq(sm) {
    @include flex-basis(32%);
  }
}


.search-tab {

  .search-tab__bar {
    margin-bottom: $grid-gutter;
  }

  .search-tab__title {
    margin-bottom: #{$grid-gutter / 2};
  }
}
.back-to-top {
  display: block;
  height: $grid-gutter;
  width: $grid-gutter;
  border: 0 none;
  border-radius: 8px;
  position: fixed;
  bottom: $grid-gutter;
  right: $grid-gutter;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  color: rgba(212, 212, 212, 0.75);
  background-color: rgba(0, 0, 0, 0.5);
  font-size: #{$grid-gutter / 4};
  text-align: center;
  margin: 0;
  padding: 0;
  @include transition('opacity 0.3s 0s ease, visibility 0s .3s ease');

  &.back-to-top--visible, &.cd-fade-out, .no-touchevents &:hover {
    @include transition('opacity 0.3s 0s ease, visibility 0s 0s ease');
  }

  &.back-to-top--visible {
    visibility: visible;
    opacity: 0.8;

    .js-drawer-open & {
      opacity: 0;
      pointer-events: none;
    }
  }

  &.back-to-top--fade {
    opacity: 0.4;
  }

  .no-touchevents &:hover {
    opacity: 0.8;
  }

  @include mq(md) {
    font-size: 1.375rem;
  }
}

[data-readmore] {
  position: relative;
  overflow: hidden;

  &::before {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2em;
    pointer-events: none;
    background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
    background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%);
    background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#00ffffff', endColorstr='#ffffff',GradientType=0 );
    @include transition(opacity 0.3s ease);
  }

  &.readmore-expanded::before {
    opacity: 1;
  }

  &.readmore-expanded::before {
    opacity: 0;
  }

  + [data-readmore-toggle] {
    margin: -1.5em 0 1.5em;
    display: block;
    padding: 0;
    color: $color-link;
    border: 0 none;
    background-color: transparent;
    font-size: 0.8em;
    font-weight: $font-weight-bold;
    text-align: left;

    .icon {
      height: 1em;
      width: 1em;
      margin-top: -2px;
    }
  }
}

/*================ Customer Related Styles ================*/
.account-nav {
  white-space: nowrap;
  overflow-x: auto;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: -ms-autohiding-scrollbar;

  @include mq(lg) {
    width: 100%;
  }

  &::-webkit-scrollbar {
    display: none;
  }

  .account-nav__item {
    display: inline-block;

    a {
      font-weight: $font-weight-medium;
      padding: 1em;
      display: inline-block;
      border-bottom: 2px solid transparent;

      @include mq(lg) {
        padding-top: 0;
        padding-bottom: 0;
        margin-top: 7.5px;
        margin-bottom: 7.5px;
        border-bottom-width: 0px;
        border-left: 2px solid transparent;

        &.active {
          font-weight: $font-weight-bold;
        }
      }

      &.active {
        border-color: $color-body-text;
        color: #000;
      }
    }

    @include mq(lg) {
      display: block;

      &:last-child {
        margin-top: 7.5px;
        padding-top: 7.5px;
        position: relative;

        &::before {
          content: '';
          top: 0;
          left: 50%;
          @include transform(translateX(-50%));
          width: calc(100% - 2em - 2px);
          height: 1px;
          background-color: $color-border;
          position: absolute;
        }
      }
    }
  }

  @include mq(lg) {
    white-space: normal;
    overflow: visible;
    padding: 0.375em 0;
    margin-right: 0;
  }
}

