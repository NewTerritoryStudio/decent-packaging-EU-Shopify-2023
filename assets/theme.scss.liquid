  @if $value == flex-start {
    -webkit-box-pack: start;
    -ms-flex-pack: start;
    -moz-box-pack: start;
  } @else if $value == flex-end {
    -webkit-box-pack: end;
    -ms-flex-pack: end;
    -moz-box-pack: end;
