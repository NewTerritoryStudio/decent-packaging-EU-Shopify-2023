.product-single__reviews-details .yotpo.yotpo-main-widget {
  margin: 0 auto 2.5em;
  
  .yotpo-default-button, input[type="button"].yotpo-default-button {
    background-color: $color-primary;
  }
  
  .yotpo-reviews.yotpo-active {
    @include display(flex);
    @include flex-wrap(wrap);

    .yotpo-review {
      @include flex(1 1 40%);
      min-width: 280px;
      max-width: 580px;
      width: 100%;
    }
  }

  .yotpo-pager {
    width: 100%;
  }
}

.product-grid-item__from-text {
  padding-right: 0.2em;
}

.product-grid-item__reviews {
  @include flex(0 1 1.25em);
  margin: 0 0 0.625em;
  line-height: 1;
  pointer-events: none;

  .loading {
    color: #c7c7c7;
  }
  
  .yotpo {
    text-align: center;

    .pull-left, .pull-right {
      float: none;
      text-align: center;
    }

    [class*="text-"] {
      display: none;
    }
  }
}


.product-grid-item--quick-shop-hover {
  .product-grid-item__image::before {
    opacity: 0;
    @include transition(opacity 0.2s ease);
    position: absolute;
    content: "";
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    padding: 2em;
    background-color: $color-primary;
    z-index: 4;
    mix-blend-mode: multiply;
    pointer-events: none;
  }
  
  .product-grid-form.product-grid-form--hover {
    opacity: 0;
    pointer-events: none;
    @include transition(opacity 0.2s ease);
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    padding: 2em;
    z-index: 5;
    background-color: transparent;
    @include display(flex);
    @include justify-content(flex-end);
    @include flex-direction(column);

    .product-grid-form__items {
      @include flex-direction(column);
      font-size: 1.25em;
      margin: 0 0 0.25em;

      select {
        max-width: none;
        color: #fff;
      }
    }

    .btn + .btn {
      margin-top: 0.25em;
      background-color: rgba(255, 255, 255, 0.75);
      color: #11141a;

      &:hover {
        background-color: rgba(255, 255, 255, 0.5);
        border-color: #fff;
      }
    }
    
    .btn-add-to-cart {
      font-size: 1em;
      opacity: 1;
      pointer-events: all;
      border-color: #fff;
      @include transform(none);
    }

    .js-qty-select {
      max-width: 10em;
      margin: auto;
      display: block;
      width: 100%;
      color: #fff;
    }
    
    .touchevents & {
      display: none;
    }
  }

  .no-touchevents &:hover, .no-touchevents &.loading {
    .product-grid-form.product-grid-form--hover {
      opacity: 1;
      pointer-events: all;
    }

    .product-grid-item__image::before {
      opacity: 1;
    }
  }
}

/* Product CTA Blocks */
.product-single__cta {
  text-align: center;
  position: relative;

  .product-single__cta-image {
    @include object-fit(cover);
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
  }

  .product-single__cta-title {
    position: relative;
    font-size: 1.75em;
    text-shadow: 0 2px 2px rgba(0, 0, 0, 0.5);
    font-weight: $font-weight-bold;
    color: #fff;
    padding: 3.5em 0.5em 2em;

    @include mq(md) {
      font-size: 2em;
    }
  }

  .product-single__cta-content {
    line-height: 1.5;
    position: relative;
    background-color: #fff;
    padding: 1em 1.5em 1em;
    margin: 0 2em 2em;
    
    @include mq(lg) {
      padding: 2em 17em 3em;
    }

    @include mq(xl) {
      margin: 0 auto 2em;
    }
  }
  
  .btn.btn {
    margin-top: 1em;
    padding: 0.75em 4em;
  }
}

.product-grid-item__hover-image  {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  @include object-fit(cover);
  z-index: 1;
  opacity: 0;
  background-color: $color-default-tertiary;
  @include transition(0.25s ease opacity);
  will-change: opacity;

  .product-grid-item:hover & {
    opacity: 1;
  }
}

.product-grid-item__order-forms {
  padding-top: #{$grid-gutter / 4};
}

.product-grid-item__order-form {
  @include display(flex);
  border: 1px solid $color-border;
  border-radius: $input-border-radius;
  padding: #{$grid-gutter / 4};
  @include align-items(center);
  flex-wrap: wrap;
}

.product-grid-item__order-title {
  @include flex(1 1 100%);
  overflow: hidden;
  font-weight: $font-weight-medium;

  p {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
}

.product-grid-item__order-form-note {
  text-transform: lowercase;
  font-size: 0.7rem;
  line-height: 0.8rem;
  font-weight: $font-weight-normal;
  text-align: right;
  @include display(flex);
  @include flex-direction(column);
  padding-bottom: 0.3em;
}

.product-grid-item__order-price {
  @include flex(0 1 auto);
  text-align: left;
  // padding-right: 10px;
}

.product-grid-item__order-quantity {
  @include flex(1 0 50%);

  & > .js-qty-select {
    @include display(flex);
    height: 100%;
    max-width: 90px;
    width: 100%;
    margin-left: auto;

    .js-qty-select-sub, .js-qty-select-add {
      @include flex(0 0 auto);
      width: 20px;
      height: 20px;
      border: 1px solid black;
      border-radius: 50%;
      @include display(flex);
      @include justify-content(center);
      @include align-items(center);
      @include align-self(center);
      font-size: 15px;
      @include transition(opacity 0.25s ease);
      cursor: pointer;
      @include user-select(none);

      &[disabled] {
        opacity: 0.15;
      }

    }

    input[type="number"] {
      @include flex(1 1 auto);
      @include display(flex);
      @include justify-content(center);
      @include align-items(center);
      @include align-self(center);
      min-width: 40px;
      height: 20px;
      margin: 0;
      min-height: 0;
    }
  }

}
/*================ Cart page ================*/
.cart-note__label, .cart-note__input {
  display: block;
  margin: 0 auto;
}

.cart-note__label {
  margin-bottom: 15px;
}

.cart-note__input {
  min-height: 50px;
  width: 100%;
  margin-bottom: 40px;
}

.cart__image {
  max-height: 95px;
}

.cart__image-wrapper a {
  display: block;
  padding-right: $grid-gutter;
}

@include mq(md) {
  .cart__image-wrapper {
    width: 130px;

    a {
      padding-right: $grid-gutter;
    }
  }
}

.cart__continue-btn {
  .cart--no-cookies & {
    display: none;
  }
}

.cart--empty-message {
  .cart--no-cookies & {
    display: none;
  }
}

.supports-no-cookies {
  .cart--no-cookies {
    display: block;
  }
}

.additional-checkout-buttons {
  margin-top: $grid-gutter;

  // reset for paypal button
  input[type="image"] {
    padding: 0;
    border: 0;
    background: transparent;
  }
}

.cart__footer {
  text-align: center;

  @include mq(md) {
    text-align: right;
  }
}


/*================ Cart toggle ================*/
.cart__toggle {
  width: auto;
  position: relative;
  @include transition(margin 0.2s ease);

  .icon-cart {
    position: relative;
    top: -1px;
  }

  // &[data-count="0"] {
  //   margin-right: 0;

  //   .count {
  //     @include transform(scale(0));
  //   }
  // }

  @include mq(sm) {
    @include flex(0 0 auto);
  }
}

.cart-count {
  // position: absolute;
  // right: 0;
  // top: 0;
  // background-color: $notification-badge-color;
  background-color: $color-primary;
  // color: #fff;
  border-radius: 13px;
  height: 26px;
  min-width: 26px;
  line-height: 26px;
  font-size: 1em;
  text-align: center;
  margin: 0 0 0 5px;
  padding: 5px 9px;
  @include transition('background-color 0.25s ease, transform 0.2s cubic-bezier(0.22, 0.61, 0.36, 1)');
  will-change: background-color, transform;

  @include mq(md) {
    padding: 2px 5px;
  }

  &.cart-count--even {
    @include animation(fade-color-in-a 0.4s 1);
  }
  
  &.cart-count--odd {
    @include animation(fade-color-in-b 0.4s 1);
  }
}


.cart-summary {
  padding-right: $half-gutter-width;
  padding-left: $half-gutter-width;

  @include mq(md) {
    padding-left: $grid-gutter;
    padding-right: $grid-gutter;
  }

  @include mq(lg) {
    padding-left: 0;
  }

  .account-card__title {
    font-size: 0.8rem;
    text-transform: uppercase;
  }
}

.cart-summary__total {
  font-size: 1.0625rem;
  @include display(flex);
  @include flex-direction(row);
  @include justify-content(space-between);
  // max-width: 380px;
  // margin-left: auto;
  font-weight: $font-weight-bold;
  padding-bottom: #{$grid-gutter / 4}
}

.cart-summary__total-notice {
  font-size: 0.8rem;
  opacity: 0.5;
  display: block;
  line-height: 0.8rem;

  + .cart-summary__total-notice {
    margin-top: 0.5em;
  }
}
