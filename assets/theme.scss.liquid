/*================ Simple Accordion ================*/

.simple-accordion {
  .simple-accordion__title {
    cursor: pointer;
    position: relative;
    padding-right: 1em;

    &::after {
      content: '';
      position: absolute;
      top: 50%;
      right: 0;
      left: auto;
      bottom: auto;
      @include transform(translateY(-50%) rotate(-45deg));
      width: 8px;
      height: 8px;
      border-style: solid;
      border-color: $color-body-text;
      border-left-width: 1px;
      border-bottom-width: 1px;
      border-top-width: 0px;
      border-right-width: 0px;
      border-radius: 0;
      opacity: 0.7;
      @include transition(#{$accordion-transition-duration} ease transform);
      will-change: transform;
      margin: 0;
      animation: none;
    }

    &.active {
      &::after {
        @include transform(translateY(-50%) rotate(135deg));
      }
    }

  }
  .simple-accordion__title + * {
    height: 0px;
    opacity: 0;
    overflow: hidden;
    @include transition('height #{$accordion-transition-duration} ease, opacity #{$accordion-transition-duration} ease 0s');
  }
  .simple-accordion__title + *.active {
    height: auto;
    opacity: 1;
    @include transition('height #{$accordion-transition-duration} ease, opacity #{$accordion-transition-duration} ease 0.1s');
  }
}




