{%- include 'page-header' -%}

{% schema %}
{
  "name": "Page Header",
  "max_blocks": 1,
  "settings": [
    {
      "type": "header",
      "content": "Theme"
    },
    {
      "type": "paragraph",
      "content": "Note: These settings will apply to all collections"
    },
    {
      "type": "checkbox",
      "id": "hide_titles",
      "label": "Hide titles"
    },
    {
      "type": "checkbox",
      "id": "condense_titles",
      "label": "Condense text",
      "default": false
    },
     {
      "type": "checkbox",
      "id": "hide_breadcrumbs",
      "label": "Hide breadcrumbs",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_border_bottom",
      "label": "Bottom border"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "checkbox",
          "id": "container",
          "label": "Align to content width",
          "default": true
        },
        {
          "type": "select",
          "id": "image_gravity",
          "label": "Pin image to",
          "info": "When responding to different screen sizes, images will be aligned to this part of the image frame.",
          "default": "center",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Centre"
            },
            {
              "value": "bottom",
              "label": "Bottom"
            },
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ]
        },
        {
          "type": "radio",
          "id": "image_size",
          "label": "Image size",
          "options": [
            { 
              "value": "cover", 
              "label": "Cover header"
            },
            { 
              "value": "contain",
              "label": "Contain witin header"
            }
          ],
          "default": "contain"
        }
      ]
    }
  ]
}
{% endschema %}